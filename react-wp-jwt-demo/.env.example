# WordPress Configuration
VITE_WP_BASE_URL=https://your-wordpress-site.local/
VITE_WP_API_NAMESPACE=wp-json
VITE_WP_JWT_NAMESPACE=jwt/v1

# WordPress JWT Endpoints
VITE_WP_JWT_TOKEN_ENDPOINT=/token
VITE_WP_JWT_REFRESH_ENDPOINT=/refresh
VITE_WP_JWT_VERIFY_ENDPOINT=/verify
VITE_WP_JWT_LOGOUT_ENDPOINT=/logout

# Development Settings
VITE_DEBUG=true

# Common Plugin Configurations:
#
# wp-rest-auth-multi plugin:
#   VITE_WP_JWT_NAMESPACE=jwt/v1
#
# jwt-auth-for-wp-rest-api plugin:
#   VITE_WP_JWT_NAMESPACE=jwt-auth/v1
#
# jwt-authentication-for-wp-rest-api plugin:
#   VITE_WP_JWT_NAMESPACE=jwt-auth/v1